{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "lib/natural/index.d.ts",
        "lib/natural/tokenizers/index.ts",
        "lib/natural/distance/index.d.ts",
        "spec/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
