{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "lib/natural/**/*",
    "spec/*",
    "io_spec/*", "spec/support/jasmine_bootstrap.js"  ],
  "exclude": [
    "./node_modules"
  ]
}
